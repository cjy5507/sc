# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
API_BASE_URL=http://localhost:3000

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0
PLAYWRIGHT_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=10  # Max requests per window

# API Keys (Optional - Only needed if using AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here       # Format: sk-ant-api03-...
PERPLEXITY_API_KEY=your_perplexity_api_key_here     # Format: pplx-...
OPENAI_API_KEY=your_openai_api_key_here             # For OpenAI/OpenRouter models. Format: sk-proj-...
GOOGLE_API_KEY=your_google_api_key_here             # For Google Gemini models.
MISTRAL_API_KEY=your_mistral_key_here               # For Mistral AI models.
XAI_API_KEY=YOUR_XAI_KEY_HERE                       # For xAI AI models.
AZURE_OPENAI_API_KEY=your_azure_key_here            # For Azure OpenAI models (requires endpoint in .taskmasterconfig).