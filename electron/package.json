{
  "name": "rolex-automation",
  "version": "1.0.0",
  "description": "Rolex Automation App",
  "main": "./dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "dev:next": "cd .. && npm run dev",
    "build": "tsc && electron-builder",
    "build:dev": "tsc && electron-builder --publish never",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "build:all": "tsc && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start:with-next": "concurrently \"cd .. && npm run dev\" \"wait-on http://localhost:3000 && npm run start\""
  },
  "keywords": [
    "rolex",
    "automation",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "electron-log": "^5.0.0-beta.16",
    "electron-updater": "^6.1.7",
    "playwright": "^1.42.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rolex.automation",
    "productName": "Rolex Automation",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "index.html"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "rolex-automation"
      }
    ]
  }
}
