{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/electron",
    "rootDir": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "electron/**/*.ts",
    "src/services/reservationScheduler.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/node_modules/**",
    "**/dist/**"
  ]
}
