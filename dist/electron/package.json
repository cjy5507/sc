{
  "name": "rolex-automation",
  "version": "1.0.0",
  "description": "Rolex Automation App",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && electron .",
    "dev": "concurrently \"tsc -w\" \"wait-on tcp:3000 && electron .\"",
    "build": "tsc && electron-builder",
    "build:dev": "tsc && electron-builder --publish never",
    "watch": "tsc -w",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": ["rolex", "automation", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.42.1",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.0-beta.16"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rolex.automation",
    "productName": "Rolex Automation",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "rolex-automation"
      }
    ]
  }
}
